<h3>New Bookmark<h3>
  <div class="col-md-8">
<%= form_for [topic, bookmark] do |f| %>
  <div class="new-bookmark-url">
  <%= f.text_field :url, class: 'form-control', placeholder: "Enter Bookmark" %>
  </div>
  <div class="new-bookmark-description">
    <%= f.text_field :description, class: 'form-control', placeholder: "provide description" %>
  </div>
  <div class="form-group">
  <%= f.submit "create bookmark", class:  'btn btn-success' %>
  </div>
<% end %>
</div>
